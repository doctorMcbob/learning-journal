{% extends "base.jinja2" %}
{% block body %}
   <h2>{{ entry.title }}</h2>
   <h3>{{ entry.created.strftime('%b. %d, %Y') }}</h3>
   {{ text|safe }}
{% endblock %}
{% block nav %}
   <div>
	 <a href="/">Home</a>
	 {% if request.authenticated_userid %}   
	  | <a href="/new">new</a></li>
	  | <a href="/edit/{{ entry.id }}">edit</a>	
	  | <a href="/logout">log out</a></li>
	 {% else %}
	  | <a href="/login">log in</a></li>
   	 {% endif %}
   </div>
{% endblock %}
