{% extends "base.jinja2" %}
{% block body %}
   {% if entries %}
   <ul>
	{% for entry in entries %}
	<li>
	   <a href="{{ request.route_url('detail', entryID=entry.id) }}">
	      {{ entry.title }}
	      <br>{{ entry.created.strftime('%b. %d, %Y') }}
	   </a>
	</li>
	{% endfor %}
   </ul>
   {% else %}
   <p>No entries here so far</p>
   {% endif %}
{% endblock %}
{% block nav %}
   <div>
	 <a href="/">Home</a>
	 {% if request.authenticated_userid %}
	  | <a href="/new">new</a></li>
	  | <a href="/logout">log out</a></li>
	 {% else %}
	  | <a href="/login">log in</a></li>
   	 {% endif %}
   </div>
{% endblock %}